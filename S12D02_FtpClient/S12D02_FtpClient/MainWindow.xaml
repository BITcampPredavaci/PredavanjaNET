<Window x:Class="S12D02_FtpClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S12D02_FtpClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <TreeView x:Name="fileExplorer" HorizontalAlignment="Left" Height="312" Margin="10,10,0,0" VerticalAlignment="Top" Width="330"/>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Left" Height="9" Margin="345,160,0,0" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="UploadButton" Content="Upload" Click="UploadButton_Click" HorizontalAlignment="Left" Margin="345,37,0,0" VerticalAlignment="Top" Width="165" Height="24"/>
        <TextBox x:Name="folderName" HorizontalAlignment="Left" Height="23" Margin="345,91,0,0" TextWrapping="Wrap" Text="Folder name" VerticalAlignment="Top" Width="165"/>
        <Button x:Name="CreateFolder" Content="Create Folder" Click="CreateFolder_Click" HorizontalAlignment="Left" Margin="345,119,0,0" VerticalAlignment="Top" Width="165"/>

    </Grid>
</Window>
