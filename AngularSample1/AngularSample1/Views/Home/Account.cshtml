@{
    Layout = null;
}

<h2>Account</h2>
<div ng-controller="RegisterCtrl as ctrl">

    <form novalidate="novalidate" ng-submit="ctrl.register()">
        <div class="form-group">
            <label> Email: </label>
            <input type="email" class="form-control"
                   ng-model="ctrl.user.email"
                   ng-required="true" />
        </div>
        <div class="form-group">
            <label> Password: </label>
            <input type="text" class="form-control"
                   ng-model="ctrl.user.password"
                   ng-required="true" 
                   pattern="(?=^.{6,}$)((?=.*\d)(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$"
                   />
        </div>
        <div class="form-group">
            <label> Password Confirm: </label>
            <input type="text" class="form-control"
                   ng-model="ctrl.user.confirmPassword"
                   ng-required="true" 
                   />
        </div>
        <input type="submit" value="Register" class="btn btn-success" />
    </form>

</div>


<div ng-controller="LoginCtrl as ctrl">

    <form novalidate="novalidate" ng-submit="ctrl.login()">
        <div class="form-group">
            <label> Email: </label>
            <input type="email" class="form-control"
                   ng-model="ctrl.user.email"
                   ng-required="true" />
        </div>
        <div class="form-group">
            <label> Password: </label>
            <input type="text" class="form-control"
                   ng-model="ctrl.user.password"
                   ng-required="true"
                   pattern="(?=^.{6,}$)((?=.*\d)(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" />
        </div>
        <input type="submit" value="Login" class="btn btn-success" />
    </form>

</div>

