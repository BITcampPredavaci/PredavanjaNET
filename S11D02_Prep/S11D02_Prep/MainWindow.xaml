<Window x:Class="S11D02_Prep.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Pick File" HorizontalAlignment="Left" Margin="28,27,0,0" VerticalAlignment="Top" Width="75" Click="FilePick_Click" Name="FilePick"/>
        <TextBox ScrollViewer.HorizontalScrollBarVisibility="Auto"
         ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="133,0,0,0" Name="Preview" IsEnabled="True" />
        <Slider Name="FontSlider" Minimum="9" Maximum="30" HorizontalAlignment="Left" Margin="10,173,0,0" VerticalAlignment="Top" Width="118"/>
        <Button Content="Save File" HorizontalAlignment="Left" Margin="28,52,0,0" VerticalAlignment="Top" Width="75" Click="FileSave_Click" Name="FileSave"/>
    </Grid>
</Window>
