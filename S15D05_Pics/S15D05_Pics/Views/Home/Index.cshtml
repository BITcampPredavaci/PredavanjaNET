@model IEnumerable<S15D05_Pics.Models.Album>
@{
    ViewBag.Title = "Home Page";
}

@Html.Partial("_AlbumSearch", new S15D05_Pics.Models.AlbumSearch())

<div class="row">
    @foreach (var item in Model)
    {
        <div class="thumbnail col-sm-6 col-md-4">
            <img src="@Url.Content(item.CoverUrl)" alt="Album pic">
            <div class="caption">
                <h3>@item.Name</h3>
                <p>@item.Price</p>
                <p>
                <a href="#" class="btn btn-primary" role="button">Buy</a> 
                <a href="#" class="btn btn-default" role="button">Details</a>
                </p>
            </div>
        </div>
    }
</div>